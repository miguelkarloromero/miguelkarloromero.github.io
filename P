import tkinter as tk
from tkinter import scrolledtext

class TerminalGUI:
    def __init__(self, master):
        self.master = master
        master.title("Linux Terminal")

        # Create scrolled text widget to display terminal output
        self.output_text = scrolledtext.ScrolledText(master, wrap=tk.WORD, height=20, width=80)
        self.output_text.grid(row=0, column=0, padx=10, pady=10)

        # Create entry widget for user input
        self.input_entry = tk.Entry(master, width=80)
        self.input_entry.grid(row=1, column=0, padx=10, pady=10)
        self.input_entry.bind("<Return>", self.handle_input)

    def handle_input(self, event):
        # Get user input from entry widget
        user_input = self.input_entry.get()

        # Process user input (for demonstration, simply echo back the input)
        self.output_text.insert(tk.END, f"$ {user_input}\n")
        self.output_text.insert(tk.END, f"{user_input}\n")

        # Clear input entry
        self.input_entry.delete(0, tk.END)

def main():
    root = tk.Tk()
    terminal_gui = TerminalGUI(root)
    root.mainloop()

if __name__ == "__main__":
    main()
